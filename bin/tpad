#!/usr/bin/env node

var
  c = require('ansi')(process.stdout),
  argv = require('optimist').argv,
  version = require(__dirname + '/../package.json').version,
  repl = require('../lib/repl'),
  serial = require('../lib/serial'),
  cleanup = c.reset.bind(c);

c.hex('CCFF00');


console.log([
'_/_/_/_/_/  _/_/_/      _/_/    _/_/_/',
'   _/      _/    _/  _/    _/  _/    _/',
'  _/      _/_/_/    _/_/_/_/  _/    _/',
' _/      _/        _/    _/  _/    _/',
'_/      _/        _/    _/  _/_/_/'].join('\n'));

c.hex('aaaaaa');

console.log('version:', version);

c.reset();

c.green();

serial.init();

var currentRepl = repl.start(), currentSerialPort;

currentRepl.context.color = function(light, r, g, b) {
  console.log('sending', b);

  if (currentSerialPort) {
    currentSerialPort.write([light, r, g, b].join(',') + '\n');
  }
}


var spinner = "|/-\\", spinnerPos = 0, spinnerTimer;
serial.on('searching', function() {
  c.grey();
  process.stdout.write('searching  ');


  spinnerTimer = setInterval(function() {

    c.back(1);
    process.stdout.write(spinner[spinnerPos]);
    c.reset();
    spinnerPos++;
    if (spinnerPos >= spinner.length) {
      spinnerPos = 0;
    }
  }, 50);
});

serial.on('connected', function(data) {
  clearInterval(spinnerTimer);

  c.green();

  console.log('\n\nconnected to a', data.config.name, 'with', data.config.pads, 'pads');
  c.reset();
  currentRepl.updatePrompt(data.config);

  currentRepl.context.sp = currentSerialPort = data.serialport;
  c.reset();
});

serial.on('disconnected', function() {
  c.red();
  currentSerialPort = null;
  console.log('disconnected');
});


process.on('unhandledException', function(e) {
  console.log(e);
  cleanup();
});
process.on('exit', cleanup);
